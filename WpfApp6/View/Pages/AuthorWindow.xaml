<Window x:Class="WpfApp6.View.Pages.AuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6.View.Pages"
        mc:Ignorable="d"
        Title="AuthorWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <Label Content="Имя"/>
            <TextBox Text="{Binding Name}"/>
            <Button x:Name="Edit" Content="OK" Margin="0 , 5 , 0 , 0" Click="Edit_Click"/>
            <Button x:Name="Back" Content="Back" Margin="0 , 5 , 0 , 0" Click="Back_Click"/>
        </StackPanel>
    </Grid>

</Window>
